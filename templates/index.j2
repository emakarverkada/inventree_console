{% extends "base.j2" %}
{% block main_content %}
    <h1>Device Central</h1>
    <form action="{{ url_for('manage_device') }}" method="post">
        {# Dropdown Name Selector #}
        Name:
        <select name="name">
            {% for name, id in names.items() %}<option name="name" value="{{ name,id }}" SELECTED>{{ name }}</option>{% endfor %}
        </select>
        Location:
        <select name="location">
            {% for location, id in locations.items() %}
                <option name="location" value="{{ location,id }}" SELECTED>{{ location }}</option>
            {% endfor %}
        </select>
        {# Serial Number and SKU Input Field - add validation #}
        Serial Numbers:
        <input type="text" name="serials" value="7JEN-AN96-M4YA">
        {# 2 buttons one for check in one for check out #}
        <input type="submit" name="action" value="Check In">
        <input type="submit" name="action" value="Check Out">
    </form>
{% endblock main_content %}
