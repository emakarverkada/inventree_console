{% extends "base.j2" %}
{% block main_content %}
    <h1>Device Central</h1>
    <form action="{{ url_for('manage_device') }}" method="post">
        {# Dropdown Name Selector #}
        Name:
        <select name="name">
            {% for name in names %}<option name="name" value="{{ name }}" SELECTED>{{ name }}</option>{% endfor %}
        </select>
        {# Serial Number and SKU Input Field - add validation #}
        Serial Numbers:
        <input type="text" name="serials">
        {# 2 buttons one for check in one for check out #}
        <input type="submit" name="action" value="Check In">
        <input type="submit" name="action" value="Check Out">
    </form>
{% endblock main_content %}
